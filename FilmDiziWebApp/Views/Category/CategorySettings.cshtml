
@{
    ViewData["Title"] = "CategorySettings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<Category>

<div class="col-sm-9 border-info">
    <div class="bg-primary text-white p-2 rounded-3 mb-2">
        <h2>Category List</h2>
    </div>
    <div class="text-white p-2 rounded-3 mb-2">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary text-white">Add a category</a>
    </div>
    <table class="table table-striped table-bordered dt-responsive nowrap" id="tbl1">
        <thead>
            <tr>
                <th>Category ID</th>
                <th>Category Name</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="2" class="text-center">
                        No Users
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CategoryID</td>
                        <td>@item.CategoryName</td>
                        <td><a href="/Category/Edit/@item.CategoryID" class="btn btn-outline-primary">Edit</a></td>
                        <td><a href="/Category/Delete/@item.CategoryID" class="btn btn-outline-danger">Delete</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>



