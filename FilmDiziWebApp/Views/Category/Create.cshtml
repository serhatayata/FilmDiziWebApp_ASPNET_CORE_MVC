@model Category
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-sm-9">
    <div class="bg-dark rounded text-white rounded pb-2">
        <span class="list-group-item bg-info text-white">Add Category</span>
        <form asp-controller="Category" asp-action="Create" method="post" class="container p-3">
            <input asp-for="CategoryID" hidden />
            <div class="form-group">
                <label>Category Name</label>
                <div><span class="text-danger" asp-validation-for="CategoryName"></span></div>
                <input asp-for="CategoryName" class="form-control" aria-describedby="emailHelp" placeholder="Enter Category Name">
            </div>
            <div class="form-group">
                <label>Image URL</label>
                <div><span class="text-danger" asp-validation-for="Images"></span></div>
                <input asp-for="Images" class="form-control" aria-describedby="emailHelp" placeholder="Enter Image URL">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-info">Add</button>
            </div>
        </form>
    </div>
</div>



