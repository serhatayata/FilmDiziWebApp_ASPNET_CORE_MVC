@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body>
    <form asp-controller="Login" asp-action="Login" method="post">
        <div class="form-group">
            <label>Username</label>
            <div><span class="text-danger" asp-validation-for="UserName"></span></div>
            <input asp-for="UserName" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
            <small class="form-text text-info">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label>Password</label>
            <div><span class="text-danger" asp-validation-for="Password"></span></div>
            <input type="password" class="form-control" asp-for="Password" placeholder="Password">
        </div>
        <div class="loginButton">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button asp-controller="Login" asp-action="Register" formmethod="get" class="btn btn-dark">Register</button>
        </div>
    </form>
</body>
</html>
