
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<Content>

<div class="col-sm-9 border-info">
    <div class="bg-primary text-white p-2 rounded-3 mb-2">
        <h2>Contents List</h2>
    </div>
    <div class="text-white p-2 rounded-3 mb-2">
        <a asp-controller="Content" asp-action="Create" class="btn btn-primary text-white">Add a content</a>
    </div>
    <table class="table table-striped table-bordered dt-responsive nowrap" id="tbl1">
        <thead>
            <tr>
                <th>Content ID</th>
                <th>Content Name</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4" class="text-center">
                        No Users
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ContentID</td>
                        <td>@item.Name</td>
                        <td><a href="/Content/Edit/@item.ContentID" class="btn btn-outline-primary">Edit</a></td>
                        <td><a href="/Content/Delete/@item.ContentID" class="btn btn-outline-danger">Delete</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

