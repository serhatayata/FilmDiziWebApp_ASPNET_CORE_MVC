
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<ContentComment>

<div class="col-sm-9 border-info">
    <div class="bg-primary text-white p-2 rounded-3 mb-2">
        <h2>Comment List</h2>
    </div>
    <table class="table table-striped table-bordered dt-responsive nowrap" id="tbl1">
        <thead>
            <tr>
                <th>Comment ID</th>
                <th>Content</th>
                <th>Added Time</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4" class="text-center">
                        No Users
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CommentID</td>
                        <td>
                            @if (item.Body.Length <= 40)
                            {
                                @item.Body
                            }
                            else
                            {
                                @item.Body.Substring(0,40) <span>...</span>
                            }
                        </td>
                        <td>@item.AddedTime.ToString("d")</td>
                        <td><a href="/Comment/Delete/@item.CommentID" class="btn btn-outline-danger">Delete</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


