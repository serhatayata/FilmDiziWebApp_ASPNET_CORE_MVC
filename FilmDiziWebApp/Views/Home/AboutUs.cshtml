@model AboutUs

@{
    if (User.Identity.IsAuthenticated)
    {
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_UserLayout.cshtml";
    }
    else
    {
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

}

<div class="container-fluid">
    <div class="card mb-5 bg-dark p-4 text-center">
        <h5 class="card-title pt-3 pl-3 pb-1 font-weight-bold text-white">About Us</h5>
        <div class="card-body">
            <p class="card-text text-white details_info">@Model.Information</p>
            <img class="card-img-top rounded-3" src="/img/AboutUs.jpg" alt="Card image cap" style="width:100%; height:50vh; max-height:50vh">
        </div>
    </div>
</div>

