
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<User>

        <div class="col-sm-9 border-info">
            <div class="bg-primary text-white p-2 rounded-3 mb-2">
                <h2>User List</h2>
            </div>
            <table class="table table-striped table-bordered dt-responsive nowrap" id="tbl1">
                <thead>
                    <tr>
                        <th>UserID</th>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center">
                                No Users
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserID</td>
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                                <td><a href="/User/Edit/@user.UserID" class="btn btn-outline-primary">Edit</a></td>
                                <td><a href="/User/Delete/@user.UserID" class="btn btn-outline-danger">Delete</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>





