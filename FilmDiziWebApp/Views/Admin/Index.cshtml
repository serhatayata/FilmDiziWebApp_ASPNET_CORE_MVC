
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<User>

<div class="p-3 m-3">
    <div class="row">
        <div class="col-sm-3">
            
        </div>
        <div class="col-sm-9">
            <div class="bg-primary text-white m-1 p-1">
                <h2>User List</h2>
            </div>
            <table class="table table-bordered table-striped m-1 p-1 table-sm">
                <thead>
                    <tr>
                        <th>UserID</th>
                        <th>User Name</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="3" class="text-center">
                                No Users
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserID</td>
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>





